{
  "name": "shell",
  "productName": "StormBrowser",
  "version": "1.0.0",
  "description": "Minimum Viable Browser shell built on Electron.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && webpack",
    "start": "electron .",
    "clean": "rimraf dist preload.js preload.js.map out node_modules",
    "distclean": "rimraf dist preload.js preload.js.map out",
    "dist": "electron-builder",
    "test": "npm run build"
  },
  "license": "GPL-3.0",
  "author": "StormGamesStudios <meliodas.aitor@gmail.com>",
  "homepage": "https://github.com/samuelmaddock/electron-browser-shell/tree/master/packages/shell",
  "private": true,
  "dependencies": {
    "electron-chrome-context-menu": "1.1.1",
    "electron-chrome-extensions": "3.10.1",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "22.3.8",
    "electron-builder": "^22.14.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.79.0",
    "webpack-cli": "^4.10.0"
  },
  "build": {
    "appId": "com.electron.shell-browser",
    "productName": "StormBrowser",
    "icon": "icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "StormBrowser"
      }
    ],
    "electronVersion": "22.3.7",
    "asar": false,
    "electronDownload": {
      "isVerifyChecksum": false,
      "strictSSL": false,
      "cache": "electron",
      "mirror": "https://github.com/Alex313031/electron-22/releases/download/v"
    },
    "directories": {
      "app": ".",
      "output": "out"
    },
    "extraFiles": [
      {
        "from": "icon.png"
      },
      {
        "from": "extensions",
        "to": "extensions"
      }
    ],
    "files": [
      "**/*",
      "!electron/"
    ],
    "linux": {
      "target": [
        "zip",
        "deb"
      ],
      "maintainer": "StormGamesStudios",
      "vendor": "StormGamesStudios",
      "synopsis": "Minimum Viable Browser shell built on Electron.",
      "category": "Network;Browser;",
      "executableName": "stormbrowser",
      "artifactName": "stormbrowser_${version}_${arch}.${ext}",
      "desktop": {
        "Name": "StormBrowser",
        "StartupWMClass": "stormbrowser",
        "Keywords": "electron;webview;browser;extensions;",
        "Icon": "stormbrowser"
      }
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "publisherName": "StormGamesStudios",
      "executableName": "stormbrowser",
      "artifactName": "StormBrowser_${version}_${arch}.${ext}"
    },
    "nsis": {
      "shortcutName": "StormBrowser",
      "artifactName": "StormBrowser_${version}_${arch}.${ext}",
      "deleteAppDataOnUninstall": false,
      "uninstallDisplayName": "StormBrowser ${version}"
    }
  }
}
